<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Create a School category -->
    <record model="ir.module.category" id="module_category_school">
        <field name="name">School</field>
    </record>

    <!-- Create a student group -->
    <record id="group_school_student" model="res.groups">
        <field name="name">Student</field>
        <field name="category_id" ref="school_aditya.module_category_school"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">This user will have access to students only.</field>
    </record>

    <!-- Create a teacher group -->
    <record id="group_school_teachers" model="res.groups">
        <field name="name">Teacher</field>
        <field name="category_id" ref="school_aditya.module_category_school"/>
        <field name="implied_ids" eval="[(4, ref('school_aditya.group_school_student'))]"/>
        <field name="comment">This user will have access to student details and fees structure.</field>
    </record>

    <!-- Create a management group -->
    <record id="group_school_management" model="res.groups">
        <field name="name">Management</field>
        <field name="category_id" ref="school_aditya.module_category_school"/>
        <field name="implied_ids" eval="[(4, ref('school_aditya.group_school_teachers'))]"/>
        <field name="comment">This user will have all access rights.</field>
    </record>

     Record rule for students viewing their own records
    <record id="school_students_view_own_records_rule" model="ir.rule">
        <field name="name">Students: View own records</field>
        <field name="model_id" ref="model_school_student"/> <!-- Use the actual ID of the model -->
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('school_aditya.group_school_student'))]"/> <!-- Changed 'groups' to 'groups_id' -->
    </record>

    <!-- Record rule for teachers viewing their own records -->
    <record id="school_teachers_view_own_records_rule" model="ir.rule">
        <field name="name">Teachers: View own records</field>
        <field name="model_id" ref="model_school_teacher"/> <!-- Use the actual ID of the model -->
        <field name="domain_force">[('teacher_user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('school_aditya.group_school_teachers'))]"/> <!-- Changed 'groups' to 'groups_id' -->
    </record>
</odoo>
