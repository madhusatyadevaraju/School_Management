<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="student_suggestion_view_tree">
        <field name="name">student.suggestion.tree</field>
        <field name="model">student.suggestion</field>
        <field name="arch" type="xml">
            <tree string="Suggestion">
                <!--                        <field name="student_id"/>-->
                <field name="student_name"/>
                <field name="student_class"/>
                <field name="suggestion"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="student_suggestion_view_form">
        <field name="name">student.suggestion.form</field>
        <field name="model">student.suggestion</field>
        <field name="arch" type="xml">
            <form string="Suggestion">
                <sheet>
                    <group>
                        <!--                        <field name="student_id"/>-->
                        <field name="student_name"/>
                        <field name="student_class"/>
                        <field name="suggestion"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_save" type="object" string="Save" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_student_suggestions" model="ir.actions.act_window">
        <field name="name">suggestions</field>
        <field name="res_model">student.suggestion</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="student_suggestion_view_tree"/>
<!--        <field name="view_id" ref="student_suggestion_view_form"/>-->
    </record>
</odoo>